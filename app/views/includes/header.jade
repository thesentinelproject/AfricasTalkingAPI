nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Sentinel Project - UnaHakika Portal
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=isActive('/messages/new') ? 'active' : '')
        - if (req.isAuthenticated())
          li
            a(href="/users/"+req.user.id, title="Profile") Profile
          li
            a(href="/logout", title="logout") Logout
        - else
          li(class=isActive('/login') ? 'active' : '')
            a(href="/login", title="Login") Login
          li(class=isActive('/messages/') ? 'active' : '')
            a(href="/messages", title="Inbox") Inbox
          li(class=isActive('/messages/send') ? 'active' : '')
            a(href="/messages/send", title="Send") Send

